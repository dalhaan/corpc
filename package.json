{
  "name": "corpc",
  "version": "1.0.0",
  "description": "Cross-Origin Remote Procedure Call",
  "keywords": [
    "typescript",
    "postMessage",
    "promise",
    "rpc",
    "message"
  ],
  "homepage": "https://github.com/dalhaan/corpc",
  "bugs": {
    "url": "https://github.com/dalhaan/corpc/issues"
  },
  "author": "Dallan Freemantle <dallan.freemantle@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dalhaan/corpc.git"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "dev": "vitest",
    "ci": "pnpm run build && pnpm run check-format && pnpm run check-exports && pnpm run test"
  },
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  }
}
